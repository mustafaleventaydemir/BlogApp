@model Post
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Document</title> <!-- HTML Yorum Satırı | Burada Sayfanın Başlığı Yer Alacak -->
@*     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.1/font/bootstrap-icons.min.css">
 *@</head>
<body>
    <div class="row">
        <div class="col-lg-8">
            <div class="bg-white p-4">
                <h1 class="h4 mb-4">@Model.Title</h1>
                <div class="tags">
                    @foreach (var tag in Model.Tags)
                    {
                        <a href="/posts/tag/@tag.Url" class="badge bg-@tag.Colors bg-opacity-10 text-@tag.Colors mb-2 fw-bold">@tag.Text</a>
                    }
                </div>
                <img src="~/img/@Model.Image" class="img-fluid rounded" width="500px" />
                <ul class="list-inline my-3">
                    <li class="list-inline-item"><i class="bi bi-calendar-event"></i>@Model.PublishedOn.ToString("d")</li>
                    <li class="list-inline-item"><i class="bi bi-person-circle"></i><a href="/profile/@Model.User.UserName">@Model.User.Name</a></li>
                </ul>
                <hr />
                <div>
                    @Html.Raw(@Model.Content) @* html etiketleri yorumlanıp sayfaya aktarılır.tinymce için bunu yaptık. *@
                </div>
            </div>
            <div class="bg-white mt-3">
                <div class="card border-0">
                    <div class="card-header pb-0">
                        <h4><span id="commentCount">@Model.Comments.Count()</span> adet yorum</h4>
                    </div>
                    <div class="card-body">
                        <div id="comments">
                            @foreach (var comment in Model.Comments)
                            {
                                <div class="my-4 d-flex">
                                    <img src="/img/@comment.User.Image" class="avatar rounded-circle float-start me-3" />
                                    <div>
                                        <div class="mb-2 d-flex">
                                            <h6 class="me-2">
                                                <a href="/profile/@comment.User.UserName">@comment.User.Name</a>
                                                @comment.User.UserName
                                            </h6>
                                            <small>@comment.PublishedOn.ToString("d")</small>
                                        </div>
                                        <p>@comment.Text</p>
                                    </div>
                                </div>
                            }
                        </div>
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <hr class="my-4" />
                            <div>
                                <h4 class="mb-3">Yorum ekle</h4>
                                <form action="/posts/AddComment" method="post">
                                    <input type="hidden" id="PostId" name="PostId" value="@Model.PostId" />
                                    <div class="mb-3">
                                        <label for="Text" class="form-label">Yorum</label>
                                        <textarea type="text" name="Text" id="Text" rows="3" class="form-control"></textarea>
                                    </div>
                                    <div class="mb-3">
                                        <button id="btnYorumKayit" type="submit" class="btn btn-primary">Kaydet</button>
                                    </div>
                                </form>
                            </div>
                        }
                        else
                        {
                            <p>Yorum yapmak için uygulamaya giriş yapmalısınız. <a href="/users/login">Login</a></p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <vc:tags-menu></vc:tags-menu>
            <vc:new-posts></vc:new-posts>
        </div>
    </div>
</body>
</html>

